---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
const { title } = frontmatter;
---

<Layout title={title}>
  <div class="mx-auto md:w-[65ch]">
    <slot name="date" />
    <h1 class="text-4xl md:text-5xl">{title}</h1>
    <slot name="description" />
    <div class="mx-auto max-w-screen">
      <div class="lg:-mx-40">
        <slot name="image" />
      </div>
    </div>
    <!-- Centre images and captions (a caption is an emphasis element after an image element) -->
    <div
      class="text-lg leading-relaxed md:text-xl [&_img]:mx-auto [&_img]:block [&_img]:h-auto [&_img]:max-w-full [&_p:has(img)+_p>em]:mt-2 [&_p:has(img)+_p>em]:mb-4 [&_p:has(img)+_p>em]:block [&_p:has(img)+_p>em]:text-center [&_p:has(img)+_p>em]:text-gray-600 [&_p:has(img)+_p>em]:italic"
    >
      <slot />
    </div>
  </div>
</Layout>
