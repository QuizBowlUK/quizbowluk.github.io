---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import CommitteeCard from "../../components/about/CommitteeCard.astro";

const committee = await getCollection("committee");
---

<Layout title="Committee">
  <h1>Committee</h1>
  <div class="space-y-4">
    {committee.map((member) => <CommitteeCard committee={member} />)}
  </div>
</Layout>
